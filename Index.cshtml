@page
@model aspnetcoreapp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Technology></h1>
    <p>
        Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
    </p>

    <h1>Calculator by Simar</h1>

    <form method="POST">
        <div style="margin-bottom: 1em;">
            <label for="num1">Enter num1:</label>
            <input type="text" id="num1" placeholder="Enter Num1" name="num1" value="@Model.Num1" />
        </div>

        <div style="margin-bottom: 1em;">
            <label for="num2">Enter Num2:</label>
            <input type="text" id="num2" placeholder="Enter Num2" name="num2" value="@Model.Num2" />
        </div>

        <div style="margin-bottom: 1em;">
            <button type="submit" name="Operation" value="ADD">ADD</button>
            <button type="submit" name="Operation" value="SUBTRACT">SUBTRACT</button>
            <button type="submit" name="Operation" value="MULTIPLY">MULTIPLY</button>
            <button type="submit" name="Operation" value="SQUARE">SQUARE</button>
            <button type="submit" name="Operation" value="CUBE">CUBE</button>
            <button type="submit" name="Operation" value="SIN">SIN</button>
            <button type="submit" name="Operation" value="COS">COS</button>
        </div>
    </form>


    @if (Model.Result != null)
    {
       <h1> <p style="color: green;"><strong>Result of the Calculation:</strong> @Model.Result</p> </h1>
    }

    @if (Model.Error != null)
    {
        <p style="color: red;"><strong>Error:</strong> @Model.Error</p>
    }
</div>